# Crossplay Environment Configuration
# Copy this file to .env and fill in your values

# Docker Compose Configuration
COMPOSE_PROJECT_NAME=crossplay
NETWORK_NAME=crossplay_net

# Host Profile (auto-detected, but can be overridden)
# Options: windows-nvidia, linux-amd64-nvidia, jetson, arm64, linux-amd64-cpu
CROSSPLAY_PROFILE=

# Docker Images
APP_IMAGE=yourorg/crossplay-app:latest
JETSON_IMAGE=yourorg/crossplay-jetson:latest

# Repository Paths
# These should point to sibling repositories
VIDEO_PATH=../video-processing
ROS2_PATH=../robot-control
NLP_PATH=../nlp-service

# Service Ports
VIDEO_PORT=8081
NLP_PORT=8082
ROS_DOMAIN_ID=0

# Optional: Custom paths and configurations
# Add any additional environment variables your services need here
